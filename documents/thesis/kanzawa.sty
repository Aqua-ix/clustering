%
% 均等割り（和文専用） from 美文書作成入門 p.66
%   ex. \kintou{5zw}{均等割り}
%
\def\kintou#1#2{\makebox[#1]{%
  \kanjiskip=0pt plus 1fill minus 1fill
  \xkanjiskip=\kanjiskip
  #2}}
%
% 振り仮名（ルビ） from 美文書作成入門 pp.66-67
%   ex. \ruby{漢字}{かんじ}
%       \ruby{漢}{かん}\ruby{字}{じ}
%
\def\ruby#1#2{%
  \leavevmode
  \setbox0=\hbox{#1}\setbox1=\hbox{\tiny#2}%
  \ifdim\wd0>\wd1 \dimen0=\wd0 \else \dimen0=\wd1 \fi
  \hbox{\kanjiskip=\fill
    \vbox{\hbox to \dimen0{\tiny \hfil#2\hfil}%
      \nointerlineskip
      \hbox to \dimen0{\hfil#1\hfil}}}}
